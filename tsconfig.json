{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["DOM", "ESNext"],
    "jsx": "react-jsx",
    "declaration": true,
    "declarationDir": "dist/types",
    "outDir": "dist",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "isolatedModules": true,
    "noEmit": false
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./tailwind.config.ts",
    "./.storybook/**/*.ts",
    "./.storybook/**/*.tsx",
    "./mdpTailwindPlugin/**/*.ts"
  ],
  "exclude": ["dist", "node_modules"]
}
